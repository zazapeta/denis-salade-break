---
import { ClientRouter } from "astro:transitions";
import Analytics from "@vercel/analytics/astro";
import { SEO } from "astro-seo";
import Background from "../components/ui/Background.astro";
import Footer from "../components/ui/Footer.astro";
import Header from "../components/ui/Header.astro";
import "../styles/global.css";

interface Props {
  title: string;
  bgColor?: string;
  primaryBallColor?: string;
  secondaryBallColor?: string;
  gridColor?: string;
  diagonalColor?: string;
  vignetteColor?: string;
}

const {
  title,
  bgColor = "#0F1115",
  primaryBallColor,
  secondaryBallColor,
  gridColor,
  diagonalColor,
  vignetteColor,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={title}
      titleTemplate="%s - Astro Framework Theme"
      description="Your comprehensive guide to building modern websites with Astro Framework"
      canonical="https://ultimate-astro-template.vercel.app/"
      noindex={false}
      nofollow={false}
      openGraph={{
        basic: {
          title: title || "Astro Framework Theme",
          type: "website",
          image: "/astro-template.png",
          url: "https://ultimate-astro-template.vercel.app/",
        },
        optional: {
          locale: "en_US",
          siteName: "Astro Framework Theme",
          description:
            "Discover the power of multi-framework development with our ultimate Astro template. From React to Vue, Svelte to Solid - experience them all in one blazing-fast website.",
        },
        image: {
          alt: "Astro Framework Theme Preview",
          width: 1200,
          height: 630,
          type: "image/png",
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@marvelousbc",
        creator: "@marvelousbc",
        title: title || "Astro Framework Theme",
        description:
          "Discover the power of multi-framework development with our ultimate Astro template.",
        image: "/astro-template.png",
        imageAlt: "Astro Framework Theme Preview",
      }}
      extend={{
        meta: [
          { name: "twitter:image", content: "/astro-template.png" },
          { name: "twitter:title", content: title },
          {
            name: "twitter:description",
            content:
              "Discover the power of multi-framework development with our ultimate Astro template. From React to Vue, Svelte to Solid - experience them all in one blazing-fast website.",
          },
          { name: "theme-color", content: bgColor },
          { name: "apple-mobile-web-app-capable", content: "yes" },
          { name: "apple-mobile-web-app-status-bar-style", content: "black" },
          { name: "author", content: "Ibrahim Elkamali" },
          {
            name: "keywords",
            content:
              "astro, framework, web development, react, vue, svelte, solid",
          },
        ],
        link: [
          {
            rel: "canonical",
            href: "https://ultimate-astro-template.vercel.app/",
          },
          { rel: "icon", type: "image/png", href: "/favicon.png" },
          { rel: "apple-touch-icon", href: "/favicon.png" },
        ],
      }}
    />
    <title>{title}</title>
    <ClientRouter />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://api.fontshare.com/v2/css?f[]=cal-sans@400,500,600&display=swap"
      rel="stylesheet"
    />
    <Analytics />
  </head>
  <body
    class="m-0 min-h-screen relative font-sans"
    style={`background-color: ${bgColor}`}
  >
    <Background
      primaryBallColor={primaryBallColor}
      secondaryBallColor={secondaryBallColor}
      gridColor={gridColor}
      diagonalColor={diagonalColor}
      vignetteColor={vignetteColor}
    />
    <Header />
    <slot />
    <div class="mb-32">
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }
</style>
